<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Material">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4b2e83</item>
        <item name="colorPrimaryDark">#b7a57a</item>
        <item name="colorAccent">#85754d</item>
    </style>
    
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#00ff00</item>

    </style>

    <style name="LabelStyle" parent="@style/TextStyle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Gold" parent="@style/LabelStyle">
        <item name="android:background">#b7a57a</item>
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="Button" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>
</resources>
